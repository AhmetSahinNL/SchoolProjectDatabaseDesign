/****** Object:  View [dbo].[TeacherInfoWithContactView]    Script Date: 26.08.2023 02:02:56 ******/
SET ANSI_NULLS ON
GO
SET QUOTED_IDENTIFIER ON
GO
CREATE VIEW [dbo].[TeacherInfoWithContactView] AS
SELECT
    p.FirstName AS 'First Name',
    p.LastName AS 'Last Name',
    p.Gender,
    p.DateOfBirth AS 'Date of Birth',
    t.TeacherId,
    t.Branch,
    t.StartingDate,
    ci.PhoneNumber,
    ci.Email,
    ci.Address
FROM Teachers t
JOIN Persons p ON t.PersonId = p.Id
JOIN ContactInformations ci ON p.ContactId = ci.Id;
GO
