/****** Object:  StoredProcedure [dbo].[GetTeacherClasses]    Script Date: 26.08.2023 02:02:56 ******/
SET ANSI_NULLS ON
GO
SET QUOTED_IDENTIFIER ON
GO
CREATE PROCEDURE [dbo].[GetTeacherClasses]
    @TeacherId VARCHAR(4)
AS
BEGIN
    SELECT
        c.ClassName
    FROM Classes c
    JOIN Teachers t ON c.Id = t.PersonId
    WHERE t.TeacherId = @TeacherId;
END;
GO
